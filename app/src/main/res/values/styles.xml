<resources>

    <style name="Theme.Surveys" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_whale</item>
        <item name="colorPrimaryDark">@color/dark_blue_whale</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="Widget.Surveys.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/blue_whale</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="TextAppearance.Surveys.Medium" parent="TextAppearance.AppCompat.Medium"/>

    <style name="TextAppearance.Surveys.Toolbar.Title" parent="TextAppearance.Surveys.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
